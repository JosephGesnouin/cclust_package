#!/usr/bin/env python

import argparse
parser = argparse.ArgumentParser()

parser.add_argument("matrix_file", help="the matrix file path")

parser.add_argument("--n_coclusters", help="the number of co-clusters",default = 2 , type=int)

parser.add_argument("--init", help="the initialization method", default = "random")

parser.add_argument("--max_iter", help="max number of iterations", default= 20 , type=int)

args = parser.parse_args()

if args.matrix_file == None :
    print "matrix file is needed"



import coclust
from coclust.CoclustMod import CoclustMod
model=CoclustMod(n_clusters=args.n_coclusters, init=args.init, max_iter=args.max_iter,corpus='cstr')
print model.n_clusters

